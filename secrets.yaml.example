# ESPHome Secrets Configuration
# Copy this file to secrets.yaml and fill in your actual credentials
# NOTE: secrets.yaml is in .gitignore to protect your credentials

# WiFi Configuration
wifi_ssid: "Your_WiFi_Network_Name"
wifi_password: "your_wifi_password"

# ESPHome Access Point (fallback)
esphome_ap_password: "your_fallback_password"

# Over-The-Air Update Password
esphome_ota_password: "your_ota_password"

# MQTT Broker Configuration
mqtt_broker: "192.168.1.100"  # IP address of your MQTT broker
mqtt_user: "your_mqtt_username"
mqtt_pass: "your_mqtt_password"

# Home Assistant API (if using)
# api_encryption_key: "your_32_character_encryption_key_here"
